    <script>
        // --- Sorting and Filtering Logic ---
        document.addEventListener('DOMContentLoaded', () => {
            const contentSort = document.getElementById('sort-content');
            const timeSort = document.getElementById('sort-time');
            const newsGrid = document.getElementById('news-grid');
            const articles = Array.from(newsGrid.querySelectorAll('.news-article'));

            function applySortAndFilter() {
                // 1. Get current filter and sort values
                const categoryFilter = contentSort.value;
                const timeSortOrder = timeSort.value;

                // 2. Filter articles based on category
                const filteredArticles = articles.filter(article => {
                    if (categoryFilter === 'all') {
                        return true;
                    }
                    return article.dataset.category === categoryFilter;
                });

                // 3. Sort the filtered articles based on time
                filteredArticles.sort((a, b) => {
                    const timeA = new Date(a.dataset.timestamp).getTime();
                    const timeB = new Date(b.dataset.timestamp).getTime();

                    if (timeSortOrder === 'latest') {
                        return timeB - timeA; // Descending order
                    } else {
                        return timeA - timeB; // Ascending order
                    }
                });

                // 4. Re-append sorted articles to the grid
                newsGrid.innerHTML = ''; // Clear the grid first
                filteredArticles.forEach(article => {
                    newsGrid.appendChild(article);
                });
            }

            // Add event listeners to both dropdowns
            contentSort.addEventListener('change', applySortAndFilter);
            timeSort.addEventListener('change', applySortAndFilter);
        });
    </script>

